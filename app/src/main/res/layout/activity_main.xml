<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/telalogin"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="205dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLogin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="224dp"
            app:layout_constraintHorizontal_bias="0.503" android:hint="@string/txt_login"
            android:textColorLink="@android:color/background_light" android:gravity="center"
            android:background="?android:attr/actionBarItemBackground"
            android:textColor="@color/ColorText"
            android:textColorHint="@color/ColorText"/>
    <EditText
            android:layout_width="205dp"
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLogin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.503" android:hint="@string/txt_password" android:singleLine="true"
            android:selectAllOnFocus="true" android:textColorLink="@android:color/background_light"
            android:gravity="center" android:background="?android:attr/actionBarItemBackground"
            android:textColorHint="@color/ColorText"
            android:textColor="@color/ColorText"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtError" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColorLink="@android:color/holo_red_dark"
            android:textColor="@android:color/holo_red_dark" app:layout_constraintHorizontal_bias="0.501"/>
    <ImageButton
            android:text="@string/btn_enter"
            android:layout_width="13dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/botaologinphone"
            android:id="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.887" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp" android:background="?attr/actionBarDivider"/>
    <Button
            android:text="@string/lnk_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/btnForgotPassword"
            android:background="@color/colorPrimaryDark"
            android:textAllCaps="false" android:textColor="@color/colorAccent"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/txtPassword"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>